<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amaranth_bold"
        android:gravity="center"
        android:text="Weather App\nAnshul Dohare"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,TextContrastCheck" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_background"
            android:fontFamily="@font/calistoga"
            android:hint="Enter City Name"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:soundEffectsEnabled="true"
            android:text="Bhopal"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />

        <EditText
            android:id="@+id/et_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_background"
            android:fontFamily="@font/calistoga"
            android:hint="Enter Country Name (Optional)"
            android:inputType="textPersonName"
            android:paddingLeft="30dp"
            android:soundEffectsEnabled="true"
            android:text="India"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_get_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_background"
            android:fontFamily="@font/carter_one"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Get Weather"
            android:textAllCaps="false"
            android:textColor="#FF00B7"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/weather_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#94FAE5DB"
                android:fontFamily="@font/baloo_paaji"
                android:padding="20dp"
                android:text="Getting Weather Details..."
                android:textColor="#5A00D6"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>